

<!-- Page Header -->
    <!-- Set your background image for this header on the line below. -->
    <header class="intro-header" style="background-image: url('assets/home-bg.jpg')">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="site-heading">
                        <h1>Dive into Code</h1>
                        <hr class="small">
                        <span class="subheading">We offer technology for all people. </span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
            <% @blogs.each do |blog| %>
              <div class="post-preview">
                <a href="blogs/<%= blog.id %>">
                        <h2 class="post-title">
                          <%= blog.title %>
                        </h2>
                        <h3 class="post-subtitle">
                          <%= blog.content %>
                        </h3>
                  </a>
                    <p class="post-meta"><%= blog.created_at %></p>
                <hr>
            <% end %>
                <!-- Pager -->
                <ul class="pager">
                    <li class="next">
                        <%= link_to 'New Blog', new_blog_path %>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <hr>